<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="500.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/signup.css" />
   </stylesheets>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
       <ImageView fx:id="imgLogo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
           <image>
               <Image url="@../images/logo.png" />
           </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
       </ImageView>
      
            <GridPane alignment="CENTER" maxWidth="425.0" minWidth="425.0" prefHeight="300.0" prefWidth="425.0" styleClass="form-background" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="6" GridPane.valignment="CENTER">
               <children>
                  <Label text="%name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label text="%surname" GridPane.rowIndex="1">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label text="%username" GridPane.rowIndex="2">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label text="%email" GridPane.rowIndex="3">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label text="%password" GridPane.rowIndex="4">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>

                  <TextField fx:id="fldName" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" GridPane.columnIndex="1" />
                  <TextField fx:id="fldSurname" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="fldUsername" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="fldEmail" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.rowIndex="3" />
                  <PasswordField fx:id="fldPassword" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.rowIndex="4" />
                  <Button fx:id="btnSignUp" maxWidth="150.0" minWidth="150.0" mnemonicParsing="false" onAction="#SignUp" prefWidth="150.0" text="%signup" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
                     <GridPane.margin>
                        <Insets top="10.0" />
                     </GridPane.margin>
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints vgrow="ALWAYS" />
            <RowConstraints />
            <RowConstraints vgrow="ALWAYS" />
         </rowConstraints>
            </GridPane>
   
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7">
         <children>
            <Label text="%signupQuestion" />
            <Hyperlink fx:id="linkLogIn" onAction="#LogIn" text="%login" />
         </children>
      </HBox>
   </children>
</GridPane>
